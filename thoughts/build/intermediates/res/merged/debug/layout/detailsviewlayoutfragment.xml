<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/layParent">
    <TextView
            android:id="@+id/tvIsFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    <ImageView
            android:id="@+id/imgBack"
            style="@style/BackImage"
            android:layout_alignParentTop="true"
            android:contentDescription="Background image"/>
    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    <TextView
            android:id="@+id/tvCategoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    <ScrollView
            style="@style/MiddleLayout"
            android:layout_above="@+id/layForBannerAd"
            android:layout_alignParentTop="true">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/RegularTextColor"
                    android:textSize="16sp"
                    android:lineSpacingExtra="5dp"
                    />

            <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/RegularTextColor"
                    android:textSize="12sp"
                    />


        </LinearLayout>
    </ScrollView>


    <LinearLayout
            android:id="@+id/layFBContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:background="@drawable/popupback">

    </LinearLayout>

    <ProgressBar
            android:id="@+id/prgLoading"
            style="@style/ProgressBar"/>

</RelativeLayout><!-- From: file:/F:/Rudrik/GRADLE/Thoughts/thoughts/src/main/res/layout/detailsviewlayoutfragment.xml -->